---
import BlogPost from '@/components/BlogPost.astro'
import BaseLayout from '@/layouts/BaseLayout.astro'
import type { Frontmatter } from '@/types/frontmatter.type'

const allPosts = await Astro.glob<Frontmatter>('../pages/posts/*.md')
const pageTitle = 'My Astro Learning Blog'
---

<BaseLayout pageTitle={pageTitle}>
  <p>Here I will post my journey of learning Astro.</p>
  <ul>
    {allPosts.map((post) => post.url && <BlogPost url={post.url} title={post.frontmatter.title} />)}
  </ul>
</BaseLayout>
